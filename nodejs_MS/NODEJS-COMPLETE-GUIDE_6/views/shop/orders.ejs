<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <h1>Orders:</h1>
                        <li class="order__item">
                            <h2># <%= order._id %></h2>
                            <ul class="order__products">
                                <% order.products.forEach(product => { %>
                                    <li class="order__products-item"><%= product.product.title%> (<%= product.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %> 
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>